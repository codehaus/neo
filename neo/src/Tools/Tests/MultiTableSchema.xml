<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE database SYSTEM "../CodeGen/Resources/norque.dtd">

<database
  name="pubs"
  package="pubs4.Model"
  defaultIdMethod="none">

  <table name="titles" 
	javaName="Title"
	description="Title (Book) Table">
    <column
      name="title_id"
      required="true"
      primaryKey="true"
      type="CHAR"
      size="6"
      description="Book id"/>
    <column
      name="title"
      javaName="TheTitle"
      required="true"
      type="VARCHAR"
      size="80"
      description="Book title"/>
    <column
      name="type"
      required="true"
      type="VARCHAR"
      size="12"
      description="Book type"/>
    <column
      name="pub_id"
      hidden="true"
      type="CHAR"
      size="4"
      description="FK Publisher"/>
    <column
      name="price"
      type="DECIMAL"
      description="Book price"/>
    <column
      name="advance"
      type="DECIMAL"
      description="Advance"/>
    <column
      name="royalty"
      type="INTEGER"
      description="Royalty?"/>
    <column
      name="ytd_sales"
      type="INTEGER"
      description="Sales this year"/>
    <column
      name="notes"
      type="VARCHAR"
      size="200"
      description="Notes (free text)"/>
    <column
      name="pubdate"
      javaName="PublicationDate"
      required="true"
      type="DATE"
      description="Publication date"/>
    <foreign-key foreignTable="publishers" name="Publisher">
      <reference
        local="pub_id"
        foreign="pub_id"/>
    </foreign-key>
    <iforeign-key foreignTable="titleauthor" onDelete="cascade">  
      <ireference
        local="title_id"
        foreign="title_id"/>
    </iforeign-key>
  </table>

  <table name="publishers" 
	javaName="Publisher"
	description="Publisher Table">
    <column
      name="pub_id"
      required="true"
      primaryKey="true"
      hidden="true"
      type="CHAR"
      size="4"
      description="Publisher id"/>
    <column
      name="pub_name"
      javaName="Name"
      type="VARCHAR"
      size="40"
      description="Publisher name"/>
    <column
      name="city"
      type="VARCHAR"
      size="20"
      description="Publisher city"/>
    <column
      name="state"
      type="CHAR"
      size="2"
      description="Publisher state code"/>
    <column
      name="country"
      type="VARCHAR"
      size="30"
      description="Publisher country"/>
    <iforeign-key foreignTable="titles" name="Titles" onDelete="setnull">
      <ireference
        local="pub_id"
        foreign="pub_id"/>
    </iforeign-key>
  </table>
  
  <table name="titleauthor"
	javaName="TitleAuthor"
	description="Title/Author many-to-many table">
	<column
	  name="title_id"
	  required="true"
	  primaryKey="true"
      hidden="true"
	  type="CHAR"
	  size="6" />
	<column
	  name="au_id"
	  required="true"
	  primaryKey="true"
      hidden="true"
	  type="CHAR"
	  size="11" />
    <foreign-key foreignTable="titles" name="Titles">
      <reference
        local="title_id"
        foreign="title_id"/>
    </foreign-key>
    <foreign-key foreignTable="authors" name="Authors">
      <reference
        local="au_id"
        foreign="au_id"/>
    </foreign-key>
  </table>  
  
  <table name="authors"
	javaName="Author">
	<column
	  name="au_id"
	  required="true"
	  primaryKey="true"
	  hidden="true"
	  type="CHAR"
	  size="11" />
	<column
	  name="au_lname"
	  javaName="LastName"
	  required="true"
	  type="VARCHAR"
	  size="40" />
	<column
	  name="au_fname"
	  javaName="FirstName"
	  required="true"
	  type="VARCHAR"
	  size="20" />
	<column
	  name="phone"
	  required="true"
	  type="CHAR"	
	  size="12" />
	<column
	  name="contract"
	  javaName="ContractSigned"
	  required="true"
	  type="BIT" />
    <iforeign-key foreignTable="titleauthor" onDelete="cascade">
      <ireference
        local="au_id"
        foreign="au_id"/>
    </iforeign-key>
  </table>
  
  <table name="jobs" javaName="Job" idMethod="native">
	<column
	  name="job_id"
      hidden="false"
      required="true"
      primaryKey="false"
	  type="SMALLINT" />
	<column
	  name="job_desc"
	  javaName="Description"
	  required="true"
	  type="CHAR"	
	  size="50" />
	<column
	  name="min_lvl"
	  javaName="MinLevel"
	  required="true"
	  type="TINYINT"/>
	<column
	  name="max_lvl"
	  javaName="MaxLevel"
	  required="true"
	  type="TINYINT"/>
  </table>
  
  
</database>
